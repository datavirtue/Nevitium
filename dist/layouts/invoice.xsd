<?xml version="1.0" encoding="ISO-8859-1" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
<xs:element name="InvoiceLayout">
  <xs:complexType>
    <xs:sequence>
		<xs:element name="element" maxOccurs="unbounded"> 
			<xs:element name="position" maxOccurs="1">
				<xs:complexType>
				<xs:sequence>
				  <xs:element name="x" type="xs:int"/>
				  <xs:element name="y" type="xs:int"/>
				</xs:sequence>
			  </xs:complexType>
			</xs:element>
			
			<xs:element name="size" maxOccurs="1">
				<xs:complexType>
				<xs:sequence>
				  <xs:element name="x" type="xs:int"/>
				  <xs:element name="y" type="xs:int"/>
				</xs:sequence>
			  </xs:complexType>
			</xs:element>
			
			<xs:element name="font" maxOccurs="1">
				<xs:complexType>
				<xs:sequence>
				  <xs:element name="family" type="xs:string"/>
				  <xs:element name="style" type="xs:int"/>
				  <xs:element name="points" type="xs:int"/>
				</xs:sequence>
			  </xs:complexType>
			</xs:element>
			
			<xs:element name="text" type="xs:string" maxOccurs="1"/>
			
			<xs:element name="graphics" maxOccurs="1">
				<xs:complexType>
				<xs:sequence>
				  <xs:element name="border" type="xs:int"/>
				  <xs:element name="fg_color" type="xs:int"/>
				  <xs:element name="bg_color" type="xs:int"/>
				  <xs:element name="opacity" type="xs:int"/>
				</xs:sequence>
			  </xs:complexType>
			</xs:element>
			
		<xs:element>
    </xs:sequence>
  </xs:complexType>
  
  <xs:element name="" type="xs:string"/>

</xs:element>
</xs:schema>